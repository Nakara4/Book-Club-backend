# Local Development Environment Variables
# Copy this file and rename to .env, then fill in your actual values

# Local Development Flag
LOCAL_DEV=true

# Django Settings
DEBUG=True
SECRET_KEY=your-local-secret-key-for-development

# Database - You can use either:
# Option 1: Local SQLite (for quick local testing)
DATABASE_URL=sqlite:///./db.sqlite3

# Option 2: Connect to production database (for realistic debugging)
# DATABASE_URL=your-render-postgresql-url-here

# CORS Settings for local frontend development
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://nakara4.github.io
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Frontend URLs (adjust based on where your frontend runs)
FRONTEND_URL=http://localhost:3000
